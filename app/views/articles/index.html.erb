<table>
    <thead>
        <tr>
            <th> ID </th>
            <th> Title </th>
            <th> Body </th>
            <th colspan="3"></th>
        </tr>
     </thead>

     <tbody>
        <% @articles.each do |article| %>
            <tr>
                <td><%= article.id%></td>
                <td><%= article.header%></td>
                <td><%= article.body%></td>

                <td><%= link_to 'Edit', edit_article_path(article)%></td>
                <td><%= link_to 'Show', show_article_path(article) %></td>
            </tr>

        <% end %>
    </tbody>
</table>

<%= link_to 'New Article', new_article_path %>