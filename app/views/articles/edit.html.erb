<h1>Edit Article</h1>
 
<%= form_with method: :put, scope: :article, url: update_article_path, local: true do |f| %>
    <p>
        <% if @article.errors.any? %>
            <ul>
                <% @article.errors.full_messages.each do |message| %>
                    <li>
                        <%= message %>
                    </li>
                <% end %>
            </ul> 
        <% end %>
    </p>

    <p class = 'field control'> 
        <%= f.label :header %>
        <%= f.text_field :header %>
    </p>

    <p>
        <%= f.label :body %>
        <%= f.text_area :body %>
    </p>
    <p>
        <%= f.submit %>
    </p>
<% end %>
 
<%= link_to 'Back', articles_path %>
<%= link_to 'Delete', delete_article_path(@article), method: :delete, data: { confirm: 'Are you sure?' } %>
