<div class = "columns mt-6 is-centered" style = "padding: 100px;">
  <div class = "column">
    <p class = "is-size-2 has-text-weight-bold mb-3">
        <%= @article.header%>
    </p>

    <% if @article.avatar.attached?%>
    <p>
        <img src= "<%=(url_for(@article.avatar))%>" width="500" height="600">
    </p>
    <% end %>
    <p>
        <%= @article.body%>
    </p>

    <p style = "margin-top: 50px;">
        <%= link_to 'Edit', edit_article_path(@article), method: :edit, class: 'button is-gray' %>
        <%= link_to 'Back to Articles', articles_path, class: 'button is-gray'%>
    </p>

  </div>
</div>